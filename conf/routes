# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /                                     controllers.Application.index()

#Categories API
GET      /API/Category                         controllers.api.CategoryApi.get()
GET      /API/Category/$id<[0-9]+>             controllers.api.CategoryApi.getId(id: Long)
GET      /API/Category/Available               controllers.api.CategoryApi.getAvailable()
POST     /API/Category                         controllers.api.CategoryApi.create()
PUT      /API/Category/$id<[0-9]+>             controllers.api.CategoryApi.update(id: Long)
DELETE   /API/Category/$id<[0-9]+>             controllers.api.CategoryApi.delete(id: Long)

#Expenses API
GET      /API/Expense                          controllers.api.ExpenseApi.get()
GET      /API/Expense/$id<[0-9]+>              controllers.api.ExpenseApi.getId(id: Long)
GET      /API/Expense/ByDay                    controllers.api.ExpenseApi.getByDay()
GET      /API/Expense/GetMonths                controllers.api.ExpenseApi.getMonths()
POST     /API/Expense                          controllers.api.ExpenseApi.create()
PUT      /API/Expense/$id<[0-9]+>              controllers.api.ExpenseApi.update(id: Long)
DELETE   /API/Expense/$id<[0-9]+>              controllers.api.ExpenseApi.delete(id: Long)

#RecurringExpenses API
GET      /API/RecurringExpense                 controllers.api.RecurringExpenseApi.get()
GET      /API/RecurringExpense/$id<[0-9]+>     controllers.api.RecurringExpenseApi.getId(id: Long)
POST     /API/RecurringExpense                 controllers.api.RecurringExpenseApi.create()
PUT      /API/RecurringExpense/$id<[0-9]+>     controllers.api.RecurringExpenseApi.update(id: Long)
DELETE   /API/RecurringExpense/$id<[0-9]+>     controllers.api.RecurringExpenseApi.delete(id: Long)

#History API
GET      /API/History/Yearly/$count<[0-9]+>    controllers.api.HistoryApi.yearly(count: Integer)
GET      /API/History/Monthly/$count<[0-9]+>   controllers.api.HistoryApi.monthly(count: Integer)


#Settings API
GET      /API/Setting                          controllers.api.SettingApi.getAll()
PUT      /API/Setting/:name                    controllers.api.SettingApi.update(name: String)

#Login
POST     /Login                                controllers.api.UserSessionAPI.logIn()

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file                         controllers.Assets.versioned(path="/public", file: Asset)
